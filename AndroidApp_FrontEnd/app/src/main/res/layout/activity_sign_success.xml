<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpSuccess"
    android:orientation="vertical"
    android:gravity="center">


    <include
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main1">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12pt"
                android:gravity="center"
                android:text="Glow up"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:gravity="center"
                android:text="아래 사이트에서도 글로우업에 대한 정보를 \n확인하실 수 있습니다."
                android:textColor="#000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/sign1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12pt"
                android:gravity="center"
                android:text="Best Product"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:gravity="center"
                android:text="그 시절 그대로, \n변하지 않는 아름다움을 만들어보세요."
                android:textColor="#000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="400dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/sign2" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="400dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/sign3" />
            <ImageView
                android:layout_width="270dp"
                android:layout_height="400dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/sign4" />
            <ImageView
                android:layout_width="270dp"
                android:layout_height="400dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/sign5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12pt"
                android:gravity="center"
                android:text="Our Business"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/group1" />
            <ImageView
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/group2" />
            <ImageView
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/group3" />



            <TextView
                android:id="@+id/textView7"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12pt"
                android:gravity="center"
                android:text="Instagram"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:gravity="center"
                android:text="\u0040glowup_official"
                android:textColor="#000"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/rectangle1" />
            <ImageView
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="4pt"
                android:background="@drawable/rectangle2" />
            <ImageView
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="4pt"
                android:layout_marginBottom="20pt"
                android:background="@drawable/rectangle3" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>